{% extends "./base.njk" %}

{% block content %}
<header>
  <h1>Latest Postings</h1>
</header>
<div class="mCard">
  <h2>Search</h2>
  <div>
    <form action="/latestPostings.js" method="get">
      <input placeholder="Date" type="text" name="date" id="fieldDate">
      <br>
      <span id="panelIp"><input placeholder="Ip" type="text" name="ip" id="fieldIp"></span> <br>
      <input placeholder="Boards separated by comma" id="fieldBoards" type="text" name="boards">
      <br>
      <input type="hidden" name="banId" id="inputBanId">
      <input type="hidden" name="boardUri" id="inputBoardUri">
      <input type="hidden" name="threadId" id="inputThreadId">
      <input type="hidden" name="postId" id="inputPostId">
      <button id="buttonLoadMore" class="hidden">Refresh</button>
      <button type="submit">Search</button>
    </form>
  </div>
</div>
<form action="/contentActions.js" method="post" enctype="multipart/form-data">
  <div class="mCard boardThreadList">
    <h2>
      <a id="linkPrevious">&lt;&lt;</a>
      <span> Postings </span>
      <a id="linkNext">&gt;&gt;</a>
    </h2>
    <div>
      <div id="divPostings"></div>
    </div>
  </div>
  </div>
</form>
{% endblock %}

{% block scripts %}
{{ script('/.static/js/polyfill.js') }}
{{ script('/.static/js/captchaModal.js') }}
{{ script('/.static/js/posting.js') }}
{{ script('/.static/js/mediaHiding.js') }}
{{ script('/.static/js/latestPostings.js') }}
{{ script('/.static/js/embed.js') }}
{{ script('/.static/js/tooltips.js') }}
{{ script('/.static/ruffle/ruffle.js') }}
{{ script('/.static/js/thumbs.js') }}
{{ script('/.static/js/expandComment.js') }}
{{ script('/.static/js/dynDel.js') }}
{{ script('/.static/js/postingMenu.js') }}
{{ script('/.static/js/captchaUtils.js') }}
{{ script('/.static/js/boardTooltip.js') }}
{% endblock %}
