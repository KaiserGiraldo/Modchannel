{% extends "./base.njk" %}

{% block content %}
<div id="settingsWrapper">
  <fieldset id="settingsFieldset">
    <legend>Flags</legend>
    <form action="/createFlag.js" method="post" enctype="multipart/form-data">
      <input type="hidden" name="boardUri" id="boardIdentifier">
      <div class="hidden" id="dragAndDropDiv">
        <div class="dropzone" id="dropzone">
          Drag flags to upload or<br>click here to select them
        </div>
        <div id="selectedDiv"></div>
      </div>
      <label id="nameLabel">
        Flag Name:
        <input name="flagName" id="fieldFlagName" type="text">
      </label>
      <input type="file" id="files" name="files">
      <button type="submit" id="addFormButton">Add Flag</button>
      <p class="small">
      Maximum size allowed: <span id="maxSizeLabel"></span>
      <br>
      Maximum name length allowed: <span id="maxNameLengthLabel"></span>
      </p>
    </form>
    <hr>
    <div id="flagsDiv"></div>
  </fieldset>
</div>
{% endblock %}

{% block scripts %}
{{ script('/.static/js/flags.js') }}
{% endblock %}
