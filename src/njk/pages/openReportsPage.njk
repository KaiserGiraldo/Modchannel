{% extends "./base.njk" %}

{% block content %}
<header>
  <h1>Open Reports</h1>
</header>
<div id="reportList" class="mCard boardThreadList">
  <h2>Report list</h2>
  <div>
    <form id="filterForm" method="get" action="/openReports.js">
      <input id="filterBoardIdentifier" name="boardUri" placeholder="board">
      <div id="filterCategoriesDiv"></div>
      <button id="filterSubmitButton" type="submit">Filter</button>
      <hr>
    </form>
    <div id="reportDiv"></div>
  </div>
</div>
<div id="reportActions" class="mCard labelTable">
  <h2>Actions</h2>
  <div>
    <form method="post" action="/closeReports.js" enctype="multipart/form-data">
      <label>
        <input type="checkbox" class="closeReportsField" name="closeAllFromReporter" id="closeAllFromReporterCheckbox" autocomplete="off">
        Close all from same reporters
      </label>
      <label>
        <input type="checkbox" class="closeReportsField" name="deleteContent" id="deleteContentCheckbox" autocomplete="off">
        Delete reported content
      </label>
      <hr>
      <label>
        Ban target:
        <select name="banTarget" id="banTargetCombo" autocomplete="off">
          <option value="0">None</option>
          <option value="1">Post</option>
          <option value="2">Reporter</option>
        </select>
      </label>
      <label>
        <input placeholder="ban duration" type="text" class="closeReportsField" id="fieldBanDuration" name="duration" autocomplete="off">
      </label>
      <label>
        <input placeholder="ban reason" type="text" class="closeReportsField" id="fieldBanReason" name="banReason" autocomplete="off">
      </label>
      <hr>
      <button type="submit" id="closeReportsFormButton">Close</button>
    </form>
  </div>
</div>
{% endblock %}

{% block scripts %}
{{ script('/.static/js/polyfill.js') }}
{{ script('/.static/js/dynDel.js') }}
{{ script('/.static/js/captchaUtils.js') }}
{{ script('/.static/js/captchaModal.js') }}
{{ script('/.static/js/postingMenu.js') }}
{{ script('/.static/ruffle/ruffle.js') }}
{{ script('/.static/js/thumbs.js') }}
{{ script('/.static/js/expandComment.js') }}
{{ script('/.static/js/posting.js') }}
{{ script('/.static/js/tooltips.js') }}
{{ script('/.static/js/embed.js') }}
{{ script('/.static/js/reports.js') }}
{{ script('/.static/js/boardTooltip.js') }}
{% endblock %}
