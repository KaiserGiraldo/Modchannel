    <div>Total media size: <span id="labelTotalSize"></span></div>
  </div>
  <h2 id="latestImagesHeading">{{ lang.latestImages }}</h2>
  <div id="divLatestImages"></div>
  <h2 id="latestPostsHeading">{{ lang.latestPosts }}</h2>
