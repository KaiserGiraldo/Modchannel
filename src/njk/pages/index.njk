{% extends "./base.njk" %}

{% block topRightBar %}
{% include './navbars/rightBarHome.njk' %}
{% endblock %}

{% block content %}
{% include './content/menuHeaderFront.njk' %}
<div id="subpageWrapper">
  {% include './content/news.njk' %}
  <h2>Stats</h2>
  <div id="divStats">
    <div>Total posts: <span id="labelTotalPosts"></span></div>
    <div>Posts in last hour: <span id="labelTotalPPH"></span></div>
    <div style="display: none;">Unique recent IPs: <span id="labelTotalIps"></span></div>
