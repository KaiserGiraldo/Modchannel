{% extends "./base.njk" %}

{% block content %}
{% include './content/menuHeader.njk' %}
<fieldset id="settingsFieldset">
  <legend>No Cookies?</legend>
  <div id="divSolvedCaptcha">
    <h3>
      Captcha solved. Input this ID as the answer to the captcha when posting:
      <span id="labelCaptchaId"></span>
    </h3>
    <hr>
  </div>
  <div>
    <p>No problem! Solve this captcha here instead.</p>
    <img id="imageCaptcha" alt="captcha">
    <form method="post" action="/solveCaptcha.js" enctype="multipart/form-data">
      <input type="hidden" name="captchaId" id="inputCaptchaId">
      <input type="text" name="answer" placeholder="answer">
      <input type="submit" value="Solve">
    </form>
  </div>
</fieldset>
{% endblock %}
